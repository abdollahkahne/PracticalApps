@using System.Collections.Generic
@using Src.Data.IdentityModels
@model IEnumerable<AppUser>
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<h1 class="bg-info text-white">All Users</h1>
<a class="btn btn-secondary" asp-action="Create">Create a User</a>
<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>User Name</th>
        <th>Email</th>
        <th>Country</th>
        <th>Age</th>
        <th>Salary</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.NormalizedUserName</td>
            <td>@user.NormalizedEmail</td>
            <td>@(user.Country.ToString())</td>
            <td>@(user.Age)</td>
            <td>@user.Salary</td>
            <td><a class="btn btn-primary btn-sm" asp-action="Update" asp-route-id="@user.Id">Update</a></td>
            <td>
                <form method="post" asp-action="Delete" asp-route-id="@user.Id">
                    <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
<div asp-validation-summary="All"></div>